generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  role      Role     @default(viewer)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

enum Role {
  admin
  editor
  viewer
}
